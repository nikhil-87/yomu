{
  "name": "yomu",
  "version": "1.0.0",
  "description": "A modern blog application built with the MERN stack",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd api && npm install && cd ../client && npm install",
    "start": "cd api && npm start"
  },
  "keywords": [
    "blog",
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
