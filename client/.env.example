# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_IMAGES_URL=http://localhost:5000/images

# App Configuration
REACT_APP_NAME=Yomu
REACT_APP_VERSION=1.0.0

# Social Media URLs
REACT_APP_FACEBOOK_URL=https://facebook.com/yomu
REACT_APP_TWITTER_URL=https://twitter.com/yomu
REACT_APP_INSTAGRAM_URL=https://instagram.com/yomu
REACT_APP_PINTEREST_URL=https://pinterest.com/yomu

# Upload Configuration
REACT_APP_MAX_UPLOAD_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# UI Configuration
REACT_APP_POSTS_PER_PAGE=10
REACT_APP_SIDEBAR_ABOUT_TEXT=Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptate qui necessitatibus nostrum illum reprehenderit.

# Feature Flags
REACT_APP_ENABLE_COMMENTS=false
REACT_APP_ENABLE_LIKES=false
REACT_APP_ENABLE_SHARING=true

# Google Analytics (Optional)
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Development/Debug
REACT_APP_DEBUG_MODE=true
